@model Repozytory.Models.Ogloszenie

@{
    ViewBag.Title = "Lista ogłoszeń";
    ViewBag.Opis = "Opis do 160 znaków";
    ViewBag.SlowaKluczowe = "Słowa kluczowe, ogłoszenie, usługa";
}

<h2>Usuń ogłoszenie nr: @Model.OgloszenieId</h2>

<h4>Czy jesteś pewien, że chcesz usunąć ogłoszenie nr: @Model.OgloszenieId?</h4>
<hr />

<div class="row">
    <div class="col-lg-4">
        <br />
        <img src="@Url.Content("/Content/Images/deletePicture.png")" width="256" hight="256" alt="Alternate Text" />
    </div>
    <div class="col-lg-8">
        <h4>Ogloszenie nr: @Model.OgloszenieId</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Uzytkownik.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Uzytkownik.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Tresc)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tresc)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Tytul)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tytul)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DataDodania)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DataDodania)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <a href="@Url.Action("Index", "Ogloszenie", null)" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-left"></span>  Wróć do listy
                </a>
                |
                <button type="submit" class="btn btn-warning" aria-label="Left Align">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"> Usuń</span>
                </button>
            </div>
        }
    </div>
</div>
