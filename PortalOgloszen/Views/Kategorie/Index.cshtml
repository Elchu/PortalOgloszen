@model IEnumerable<Repozytory.Models.Kategoria>

@{
    ViewBag.Title = "Lista kategorii";
    ViewBag.Opis = "Opis do 160 znaków";
    ViewBag.SlowaKluczowe = "Słowa kluczowe, ogłoszenie, usługa";
}

<h2>Lista kategorii</h2>

<div class="row">
    <div class="col-lg-8">
        @using (Html.BeginForm("PokazOgloszenia", "Kategorie", FormMethod.Get))
        {
            @Html.AntiForgeryToken()
    
            <div class="form-group">
                @Html.Label("Kategoria", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("KategoriaId", new SelectList(Model, "KategoriaId", "Nazwa"), "Wybierz categorię", htmlAttributes: new { @class = "form-control", data_val = "true", data_val_required = "Kategoria jest wymagana" })
                    @Html.ValidationMessage("KategoriaId", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary" aria-label="Left Align">
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"> Pokaż ogłoszenia</span>
                    </button>
                </div>
            </div>
        }

        <div>
            <a href="@Url.Action("Index", "Ogloszenie", null)" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span>  Wróć do listy
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}








